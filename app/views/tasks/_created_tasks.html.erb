<h5>Task Delegati</h5>
<table class="table table-striped tasks">
  <% @created_tasks.each do |c_task| %>
  <tr>
    <td width="2%"><input type="checkbox" name="done" data-task-id="<%= c_task.id %>" value="1" /></td>
    <td width="13%">a: <span class="label label-info"><%=   (c_task.user_id ?  c_task.assigned.username : "Tu" ) %></span></td>
    <td width="75%"><strong><%= c_task.description %></strong></td>
    <td width="10%"><%= c_task.created_at.strftime('%d/%m/%Y') %></td>
    <td>          
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    task_path(c_task),
                    :method => :delete,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-mini btn-danger' %>
    </td>
  </tr>
  <% end %>
</table>