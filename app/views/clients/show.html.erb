<%- model_class = Client -%>

<div class="box">
  <div class="box-header">
    <h2>
      <i class="icon-user"></i><span class="break"></span>
      <%=t '.title', :default => model_class.model_name.human %>
    </h2>
  </div>
  <div class="box-content">
    <dl class="dl-horizontal">
  <dt><strong>Nome:</strong></dt>
  <dd><%= @client.full_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mobile) %>:</strong></dt>
  <dd><%= @client.mobile %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @client.email %></dd>
  <dt><strong>Indirizzo:</strong></dt>
  <dd><%= @client.full_address if @client.address? %></dd>
</dl>

  <div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              clients_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_client_path(@client), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              client_path(@client),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
  </div>


</div>

