<%- model_class = Deal -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:protocol_number) %>:</strong></dt>
  <dd><%= @deal.protocol_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @deal.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:legal_company) %>:</strong></dt>
  <dd><%= @deal.legal_company %></dd>
  <dt><strong><%= model_class.human_attribute_name(:operative_company) %>:</strong></dt>
  <dd><%= @deal.operative_company %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @deal.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:shipment) %>:</strong></dt>
  <dd><%= @deal.shipment %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount_offered) %>:</strong></dt>
  <dd><%= @deal.amount_offered %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount_accepted) %>:</strong></dt>
  <dd><%= @deal.amount_accepted %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @deal.status %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              deals_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_deal_path(@deal), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              deal_path(@deal),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
