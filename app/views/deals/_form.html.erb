<%= simple_form_for @deal, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :protocol_number %>
  <%= f.input :user_id %>
  <%= f.input :legal_company %>
  <%= f.input :operative_company %>
  <%= f.input :description %>
  <%= f.input :shipment %>
  <%= f.input :amount_offered %>
  <%= f.input :amount_accepted %>
  <%= f.input :status %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                deals_path, :class => 'btn' %>
  </div>
<% end %>
