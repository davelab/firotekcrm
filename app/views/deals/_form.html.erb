<%= simple_form_for @deal, :html => { :class => 'form-horizontal' } do |f| %>


  <%= f.input :protocol_number  %>
  <%= f.input :user_id, :as => :select, :label => "Venditore", :collection => User.all , :value_method => :id, :label_method => :username  %>
  <%= f.input :billed_company, :as => :select, :include_blank => true, :label => "Società intestataria", :collection => Company.all, :value_method => :id, :label_method => :name, :selected => params[:billed_company]  %>
  <%= f.input :operative_company, :as => :select, :label => "Società presso cui", :collection => Company.all, :value_method => :id, :label_method => :name %>
  <%= f.input :description %>
  <%= f.input :offered_import %>

  <%= f.input :real_import  %>
  <%= f.input :status, :as => :select, :collection => deal_status, :default => 1  %>
  <%= f.input :shipment_mode, :as => :select, :collection => shipment_mode, :default => 1  %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                deals_path, :class => 'btn' %>
  </div>
<% end %>
