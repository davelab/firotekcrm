<%- model_class = Report -%>
<%= link_to t('.new', :default => t("helpers.links.nuovo")),
            new_report_path,
            :class => 'btn btn-primary' %>

<div class="box">
  <div class="box-header">
    <h2>
      <i class="icon-file"></i><span class="break"></span>
      I tuoi Report
    </h2>
  </div>
  <div class="box-content">
    
<table  class="table table-striped table-bordered datatable">
  <thead>
    <tr>
     <% if can? :view_all_reports, @user %>
      <th>Autore Report</th>
     <% end %>
      <th>Titolo</th>
      <th>Descrizione</th>
      <th><%= model_class.human_attribute_name(:company_id) %></th>
      <th><%= model_class.human_attribute_name(:client_id) %></th>
      
      <th>Eseguito il</th>
      <th>Creato il</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @reports.each do |report| %>
      <tr>
     <% if can? :view_all_reports, @user %>
      <td><%= report.user.username %></td>
     <% end %>
        <td><%= link_to report.title, report_path(report) %></td>
        <td><%= truncate(report.description, :length => 100, :separator => ' ') %></td>

        <td><%= link_to report.company.name, company_path(report.company_id) if report.company_id %></td>
        <% @report.clients.each do |client| %>
           
            <%= link_to client.full_name, client_path(client) %>
        <% end %>
        <td><%=l report.executed_at if report.executed_at %></td>
        <td><%=l report.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_report_path(report), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      report_path(report),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

  </div>
</div>



