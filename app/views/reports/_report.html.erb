<div class="report-block" <%= "style=border-left-color:#eb3e3e" if report.title == "Intervento Tecnico"  %>>
	<div class="report-block-text">
	<br>

	
		<h3><%=t report.title %> 	<span class="badge badge-info"><i class="icon-user"></i> <%=  owned(report) ? "Personale" : report.user.username %></span> </h3> 
	
		

		<p><%= report.description %></p>
		<% if report.client_id %>
		<p>Referenti Report: <b><%= link_to report.client.full_name, client_path(report.client.id) %></b> <small><%= report.client.position %></small></p>
		<% end %>
	</div>
	<%  ex_date = report.executed_at %> 
	<div class="report-block-date" <%= "style=background:#eb3e3e" if report.title == "Intervento Tecnico"  %>>
		<h2><%= ex_date.strftime("%d") %></h2>
		<%= localize(ex_date, :format => "%b %Y") %><br>
		<i class="icon-time"></i> <%= ex_date.strftime("%H:%M") %>
	</div>
	
	
</div>

